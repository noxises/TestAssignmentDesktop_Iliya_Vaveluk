@{
    var allCurrencies = APIController.GetAllCurrencies();
}


<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - TestAssignmentDesktop_Iliya_Vaveluk</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/TestAssignmentDesktop_Iliya_Vaveluk.styles.css" asp-append-version="true" />



</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm " id="nav">
            <div class="container-fluid">
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav ">
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Converter">Converter</a>
                        </li>

                    </ul>
                    <div class="header-search js-search-form">
                        <form>
                            <div>

                                <input class="input_search big elastic-box" type="search" name="q" minlength="5"
                                       id="elastic" placeholder="Start typing currencies name" oninput="livesearch()" autocomplete="off" required>
                            </div>
                        </form>
                        <i class="fa fa-search js-search" aria-hidden="true"></i>
                    </div>
                    <ul class="elastic hide" id="elastic-list">
                        <li class="error hide" title="$">NOTING TO SHOW ON SEARCH</li>

                        @foreach (var currencyList in allCurrencies)
                        {

                            <li class="hide" title="@currencyList.name" onclick="location.href='/Home/Currency/@currencyList.id'">

                                @currencyList.name (@currencyList.symbol)

                            </li>
                        }
                    </ul>
                    <div>
                        <div class="form-check form-switch">
                            <input class="form-check-input" type="checkbox" id="flexSwitchCheckDefault">
                            <label class="form-check-label" for="flexSwitchCheckDefault">DarkMode</label>
                        </div>
                    </div>
                </div>

            </div>

        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2022 - TestAssignmentDesktop_Iliya_Vaveluk - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>

    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
